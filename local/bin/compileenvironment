#!/usr/bin/zsh
set -e

all=""

environment=~/.environment

cat > "$environment" <<EOS
export TZ='America/Los_Angeles'
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

export EDITOR=nvim
export VISUAL=\$EDITOR
export BROWSER="google-chrome-stable"
export PREFIX="\$HOME/.local"
export MANPATH="\$PREFIX/share/man:\$MANPATH"

export TRAVEL_FILE="\$HOME/.traveling"
export WORKSPACE="\$HOME"

EOS

paths=~/.paths

cd $paths
rmbrokensymlinks

for list in $paths/*; do
  while read -r line; do
    all="$line:$all"
  done < "$list"
done

all="$all/usr/local/bin:/usr/bin:/bin:/usr/games"

echo "export PATH=\"$all\"" >> "$environment"

for file in ~/.asdf/asdf.sh ~/.gnupg/gpg-agent.env ~/.ssh/agent.env; do
  echo "if [ -f $file ]; then source $file; fi" >> "$environment"
done
