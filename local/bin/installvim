#!/usr/bin/zsh
sudo apt-get update
set -e
sudo apt-get install -y libncurses5-dev python3-dev ruby-dev
mkdir -p "$PREFIX/source"
cd "$PREFIX/source"
if [ ! -d vim ]; then
  git clone https://github.com/vim/vim.git vim
fi
cd vim
git pull origin master
make distclean
./configure --prefix="$PREFIX" \
  --with-features=huge \
	--enable-multibyte \
	--enable-rubyinterp \
	--enable-perlinterp \
	--enable-luainterp \
	--enable-cscope \
	--enable-perlinterp \
	--enable-python3interp
make
make install
installvundle
