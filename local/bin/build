#!/usr/bin/zsh
if [ -f Makefile ]; then
  make
elif [ -f package.json ]; then
  if fgrep '"build"' package.json >/dev/null; then
    npm run build
  elif fgrep '"prepublish"' package.json >/dev/null; then
    npm run prepublish
  fi
elif [ -f Cargo.toml ]; then
  caro build
elif [ -f Rakefile ]; then
  rake
elif [ -x ./build ]; then
  ./build
else
  echo "Don't know how to build $PWD." > /dev/stderr
  exit 1
fi
