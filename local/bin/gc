#!/usr/bin/zsh
CACHE="$HOME/.ghmyrepos"

if [[ ! -f "$CACHE" || $* == *--refresh* ]]
then
  ghmyrepos > "$CACHE"
  if test -f "$HOME/.repos"
  then
    cat "$HOME/.repos" >> "$CACHE"
  fi
fi

slug=$(cat "$CACHE" | selecta)
base=$(basename "$slug")

echo "$slug"

hub clone "$slug" "$base"

(
  cd "$base"
  hub issue
)
