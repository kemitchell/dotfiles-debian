#!/bin/sh
set -e
set -x

# Arch
if command -v pacman >/dev/null; then
cat <<EOS | xargs sudo pacman -S --noconfirm
base-devel
dash
fzf
keychain
mosh
parallel
screen
the_silver_searcher
zsh
EOS

# Debian
elif command -v apt >/dev/null; then
cat <<EOS | xargs sudo apt -y install
build-essential
dash
keychain
mosh
parallel
screen
zsh
EOS

# Unknown
else
  echo "Could not find pacman or apt."
  exit 1
fi
