#!/bin/bash
set -m
(
DIRS=$(find "$HOME" -maxdepth 1 -mindepth 1 -type d -and -not -iname '.*')

HAVE_DIRTY=""
for dir in $DIRS; do
  if [ -d "$dir/.git" ]; then
    if (cd "$dir" && git-tree-is-dirty); then
      echo "$dir tree is dirty!" >/dev/stderr
      HAVE_DIRTY="1"
    fi
  fi
done

if [ ! -z "$HAVE_DIRTY" ]; then
  exit 1
fi

set -e

for dir in $DIRS; do
  if [ -d "$dir/.git" ]; then
    if (cd "$dir" && git-tree-is-dirty); then
      echo "$dir tree is dirty!" >/dev/stderr
      exit 1
    else
      echo "Pushing $dir"
      cd "$dir" || exit
      git push --all --quiet&
    fi
  fi
done

wait
)
