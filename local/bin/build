if [ -f Makefile ]; then
  make ; exit
elif [ -f package.json ]; then
  if fgrep '"build"' package.json >/dev/null; then
    npm run build ; exit
  elif fgrep '"prepublish"' package.json >/dev/null; then
    npm run prepublish ; exit
  fi
elif [ -f Rakefile ]; then
  rake ; exit
elif [ -x ./build ]; then
  ./build ; exit
fi

echo "Don't know how to make $PWD." > /dev/stderr
exit 1
