[user]
	name = Kyle E. Mitchell
	email = kyle@kemitchell.com
	logallrefupdates=true
[gui]
[color]
	diff = auto
	status = auto
	branch = auto
[diff]
  algorithm = minimal
[alias]
	graph = log --oneline --graph --decorate
	grapha = log --oneline --graph --decorate --all
	g = log --oneline --graph --decorate --all
	wdiff = diff --color-words
	wd = diff --word-diff
	sub = submodule
	a = add
	aa = add --all
	ai = add --interactive
	amend = commit --amend -C HEAD --allow-empty-message
	b = branch
	bb = branch --all
	continue = rebase --continue
	cp = cherry-pick
	abort = rebase --abort
	skip = rebase --skip
	c = commit
	ca = commit -a
	cam = commit -a -m
	cb = checkout -b
	cc = commit -m
	ch = checkout
	d = diff
	dev = !git checkout development || git checkout -b development
  empty = commit --allow-empty-message -m ''
  f = fetch
	ff = merge --ff-only
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	l = log --oneline -n 10 --decorate=full
	m = checkout master
	mirror = push --mirror
  noff = merge --no-ff
  out = checkout
	p = push
	pa = !git remote | xargs -l git push
	po = push origin
	pom = push origin master
	rom = rebase origin/master
	purge = clean -fdx
	clobber = clean -fdx
	pwd = !pwd
	r = remote
	release = push --tags github master
	remove = ls-files --deleted | xargs git rm
	s = status
	todo = !git --no-pager grep -i -E '(todo|fixme)' | sed -r 's/ TODO: //g' | sed -r 's!//! !g' | sed -r 's/\\s+/ /g'
	topic = checkout -b
	reword = commit --amend
	unstash = stash apply
  wip = commit -m "WIP"
  wlog = log -p --color-words
	webstart = instaweb
	webstop = instaweb --stop
	h = "!source ~/.githelpers && pretty_git_log"
	track = checkout --track
  rh = reset --hard
  setup = branch --set-upstream-to origin/master
[core]
	editor = vim \"+set spell\" -c start
	excludesfile = /home/kyle/.gitignore_global
	quotepath = false
[rerere]
	enabled = 1
[merge]
	conflictstyle = diff3
	tool = vimdiff
[credential]
	helper = cache --timeout=3600
[push]
	default = matching
  # followTags = true
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.office365.com
	smtpServerPort = 587
	smtpUser = kyle@kemitchell.com
	aliasesFile = ~/.mutt/alias
	aliasesFileType = mutt
	multiEdit = true
	confirm = always
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
