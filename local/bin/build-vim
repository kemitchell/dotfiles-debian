#!/bin/sh

sudo apt-get update
sudo apt-get remove --purge vim vim-runtime
sudo apt-get install -y mercurial libncurses5-dev python-dev ruby-dev
mkdir -p $PREFIX/source
cd $PREFIX/source
hg clone https://vim.googlecode.com/hg/ vim
cd vim
hg pull
hg update
make distclean
./configure --prefix=$PREFIX --with-features=huge --enable-multibyte --enable-rubyinterp --enable-pythoninterp --enable-perlinterp --enable-luainterp --enable-cscope && make && make install
