#!/usr/bin/zsh
cd

CACHE="$HOME/.github-my-repos"

if [[ ! -f "$CACHE" ]] || [[ $* == *--refresh* ]] || [[ $* == *-r* ]]; then
  updategithubcache
fi

remote=$((cat "$CACHE" | awk '{print "git@github.com:" $1}' ; cat "$HOME/.git-my-repos") | selecta)
if [ -z "$remote" ]; then
  exit 1
fi
slug=$(echo -n "$remote" | cut -f 2 -d ':')
base=$(basename "$slug")
clone="$WORKSPACE/$base"

if [ -d "$clone" ]; then
  echo "$clone already exists."
  exit 1
fi

cached="$HOME/.git-cache/$slug"
if [ -d "$cached" ]; then
  echo "Updating cache."
  (
    cd "$cached"
    git fetch -q origin
    git merge --ff-only origin
  )
  echo "Copying from cache."
  cp -r "$cached" "$clone"
else
  git clone "$remote" "$clone"
fi

(
  cd "$clone"
  git submodule update --init --recursive
  gitinstallhooks
  if git remote -v | fgrep "github" > /dev/null; then
    gh issue
  fi
  git grep "TODO"
)
