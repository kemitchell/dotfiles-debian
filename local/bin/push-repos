#!/bin/bash
set -e

DIRS=$(find "$HOME" -maxdepth 1 -mindepth 1 -type d -and -not -iname '.*')

HAVE_DIRTY=""
for dir in $DIRS; do
  if [ -d "$dir/.git" ]; then
    if (cd "$dir" && git-tree-is-dirty); then
      echo "$dir tree is dirty!" >/dev/stderr
      HAVE_DIRTY="1"
    fi
  fi
done

if [ ! -z "$HAVE_DIRTY" ]; then
  exit 1
fi

find "$HOME" -maxdepth 2 -mindepth 2 -type d -name .git -print0 | \
  xargs -P 0 -0 -I {} git -C {} push --all --quiet
