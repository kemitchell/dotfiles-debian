#!/bin/bash
set -ex

usage="Usage: <in-file> <out-file>"

if [ ! -r "$1" ]; then
  echo "$usage"
  exit 1
fi

if [ -z "$2" ]; then
  echo "$usage"
  exit 1
fi
touch "$2"

tmp=$(mktemp --suffix=.wav)
function cleanup {
  rm -rf "$tmp"
}
trap cleanup EXIT
ffmpeg -y -i "$1" -ar 16000 -ac 1 "$tmp"
pocketsphinx_continuous -infile "$tmp" >"$2"
