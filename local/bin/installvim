#!/bin/sh
set -e

sudo apt-get update
#sudo apt-get install -y libncurses5-dev python3-dev ruby-dev
sudo apt-get -y build-dep vim

tag="${1-origin/master}"
repo="$PREFIX/source/vim"
if [ -d "$repo" ]; then
  cd "$repo"
  git fetch origin
else
  git clone https://github.com/vim/vim.git "$repo"
  cd "$repo"
fi

git checkout "$tag"
make distclean
./configure --prefix="$PREFIX" \
  --with-features=huge \
	--enable-cscope \
	--enable-luainterp \
	--enable-multibyte \
	--enable-perlinterp \
	--enable-perlinterp \
	--enable-python3interp \
	--enable-rubyinterp
make
make install
installvundle
