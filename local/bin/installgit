#!/bin/sh
set -e

version="$1"
if [ -z "$version" ]; then
  version=$(latestgitversion)
fi

tag=v$version
REPO=$PREFIX/source/git
SOURCE=$(dirname "$REPO")
GIT="git://git.kernel.org/pub/scm/git/git.git"
mkdir -p "$SOURCE"

if [ -d "$REPO" ]; then
	cd "$REPO"
	make distclean
	git fetch
else
	git clone "$GIT" "$REPO"
	cd "$REPO"
fi

git checkout -f "$tag"

if command apt 2>/dev/null; then
  sudo apt-get update
  sudo apt-get install -y build-essential autoconf libpcre2-dev
  sudo apt-get -y build-dep git
fi

export USE_LIBPCRE=true
make configure
./configure "--prefix=$PREFIX"
make all
make install

command -v git
git --version
