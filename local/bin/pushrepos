#!/bin/bash
set -e

REPOS=$(listgitrepos "$HOME")
[ -z "$REPOS" ] && exit 0

echo "$REPOS" | parallel --bar git -C {} push --all --quiet

HAVE_DIRTY=""
for dir in $REPOS; do
  if (cd "$dir" && cd .. && gittreeisdirty); then
    echo "$dir tree is dirty!" >/dev/stderr
    HAVE_DIRTY="1"
  fi
done

if [ ! -z "$HAVE_DIRTY" ]; then
  exit 1
fi
