#!/usr/bin/zsh
set -e

if connectedtointernet; then
  if [ -f "$TRAVEL_FILE" ]; then
    pushrepos
  else
    pushanddeleterepos
    purgefiles
  fi
  dotsync
  hash syncprojects && syncprojects
  sudo shutdown now -h
else
  if promptyorn "No Internet connection. Shut down?"; then
    sudo shutdown now -h
  fi
fi
