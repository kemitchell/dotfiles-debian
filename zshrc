# Aliases and Functions
# =====================
source $HOME/.zshaliases

# API Keys
# ========
source $HOME/.zapikeys

# Options
# =======
export EDITOR=vim
setopt auto_cd

# History
# =======
setopt share_history
setopt append_history
HISTSIZE=50000
SAVEHIST=10000
HISTFILE=~/.zsh_history

# Key Bindings
# ============
bindkey -e
