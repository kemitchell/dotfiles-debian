#!/usr/bin/zsh
set -e
set -x
sudo apt-get update
sudo apt-get --with-new-pkgs upgrade -y

signal_sandbox=/opt/Signal/chrome-sandbox
if [ -f "$signal_sandbox" ]; then
  sudo chmod 4755 "$signal_sandbox"
fi

sudo apt autoremove -y
sudo apt clean
hash npm && npm i -g npm
hash npm && npm upgrade -g
hash gem && gem update
hash upgradevimplugins && upgradevimplugins
hash rustupdate && rustupdate
hash dotsyncall && dotsyncall
