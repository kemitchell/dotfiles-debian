[user]
	name = Kyle Mitchell
	email = kyle@kemitchell.com
	logallrefupdates=true
[gui]
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	graph = log --oneline --graph --decorate
	g = log --oneline --graph --decorate --all
	wdiff = diff --color-words
	wd = diff --word-diff
	sub = submodule
	a = add
	aa = add --all
	ai = add --interactive
	ai = add -i
	amend = commit --amend -C HEAD
	b = branch
	continue = rebase --continue
	abort = rebase --abort
	skip = rebase --skip
	c = commit
	ca = commit -a
	cam = commit -a -m 
	cb = checkout -b 
	cc = commit -m 
	ch = checkout
	d = diff
	dev = !git checkout development || git checkout -b development
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	h = help
	l = log --oneline -n 10
	m = checkout master
	d = checkout development
	mirror = push --mirror
	p = push
	pa = !git remote | xargs -l git push
	purge = clean -fdx
	clobber = clean -fdx
	pwd = !pwd
	r = remote
	release = push --tags github master
	remove = ls-files --deleted | xargs git rm
	s = status
	todo = !git --no-pager grep -i -E '(todo|fixme)' | sed -r 's/ TODO: //g' | sed -r 's!//! !g' | sed -r 's/\\s+/ /g'
	topic = checkout -b 
	unstash = stash apply
	webstart = instaweb
	webstop = instaweb --stop
	h = "!source ~/.githelpers && pretty_git_log"
	track = checkout --track 
[core]
	editor = vim \"+set spell\" -c start
	excludesfile = /home/kyle/.gitignore_global
	quotepath = false
[rerere]
	enabled = 1
[merge]
	conflictstyle = diff3
	tool = vimdiff
[credential]
	helper = cache --timeout=3600
[push]
	default = matching
	# followTags = true
[sendemail]
