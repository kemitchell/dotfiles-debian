alias chase='cd !$'
alias ff='fgrep'
alias la='ls -av'
alias ll='ls -l'
alias lla='ls -al'
alias ls='ls --color -v'
alias rm='rm -i'
alias up='cd ..'

function mkcd() {
	mkdir $1
	cd $1
}

function v {
	if jobs vim; then
		fg
	else
		vim $@
	fi
}

function spawn { ($* 2>&1 1> /dev/null &) }

function mux {
	( dot-pull-all & ) >/dev/null 2>&1
	screen -x || screen
}
