#!/usr/bin/zsh
CACHE="$HOME/.gh-my-repos"

if [[ ! -f "$CACHE" || $* == *--refresh* ]]
then
  gh-my-repos | sort > "$CACHE"
  if [ -f "$HOME/.repos" ]; then
    cat "$HOME/.repos" >> "$CACHE"
  fi
fi

slug=$(cat "$CACHE" | selecta)
base=$(basename "$slug")

echo "$slug"

hub clone "$slug" "$base"

(
  cd "$base"
  hub issue
)
