[user]
	name = Kyle E. Mitchell
	email = kyle@kemitchell.com
	logallrefupdates=true
[gui]
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	graph = log --oneline --graph --decorate
	grapha = log --oneline --graph --decorate --all
	g = log --oneline --graph --decorate --all
	wdiff = diff --color-words
	wd = diff --word-diff
	sub = submodule
	a = add
	aa = add --all
	ai = add --interactive
	amend = commit --amend -C HEAD --allow-empty-message
  contributors = log --format='%aN%n%cN'
	b = branch
	bb = branch --all
	continue = rebase --continue
	cp = cherry-pick
	abort = rebase --abort
	skip = rebase --skip
	c = commit
	ca = commit -a
	cam = commit -a -m
	cb = checkout -b
	cc = commit -m
  cs = shallow
  shallow = clone --depth 1
	co = checkout
	ch = checkout
	d = diff
	dc = diff --cached
	dev = !git checkout development || git checkout -b development
	empty = commit --allow-empty-message -m ''
	e = commit --allow-empty-message -m ''
	f = fetch
	ff = merge --ff-only
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	l = log --oneline -n 10 --decorate=full
	mirror = push --mirror
  new = !git init && git headtomain
  headtomain = symbolic-ref HEAD refs/heads/main
	noff = merge --no-ff
	out = checkout
	p = push
  pall = push --all
	pa = !git remote | xargs -l git push
	po = push origin
	purge = clean -fdx
	clobber = clean -fdx
	pwd = !pwd
	r = remote
	rc = rebase --continue
	mc = merge --continue
	recent = log --oneline --name-only -10
	remove = ls-files --deleted | xargs git rm
	s = status
	todo = !git --no-pager grep -E '(TODO|FIXME)' | sed -r 's/\\s+/ /g' | fgrep -v vendor
	topic = checkout -b
	reword = commit --amend --no-verify
	unstash = stash apply
	wip = commit -m "WIP"
	wlog = log -p --color-words
	webstart = instaweb
	webstop = instaweb --stop
	h = "!source ~/.githelpers && pretty_git_log"
	track = checkout --track
	rh = reset --hard
[core]
	editor = vim \"+set spell\" -c start
	excludesfile = /home/kyle/.gitignore_global
	quotepath = false
[rerere]
	enabled = 1
[merge]
	conflictstyle = diff3
	tool = vimdiff
[credential]
	helper = cache --timeout=3600
[push]
	default = matching
	followTags = true
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.fastmail.com
	smtpServerPort = 587
	smtpUser = kylemitchell@fastmail.fm
	multiEdit = true
	confirm = always
[credential "smtp.fastmail.com"]
  helper = "!f() { test \"$1\" = get && echo \"password=$(pass fastmail/password)\"; }; f"
[diff]
	algorithm = patience
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P
[commit]
  verbose = true
[init]
	defaultBranch = main
